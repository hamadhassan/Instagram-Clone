<div class="container pt-5" >
  <div class="row">
    <div class="offset-xl-4 col-xl-4 offset-lg-4 col-lg-4 offset-md-3 col-md-6  text-center ">
      <div class="border p-5">
        <div>
          <%= image_tag 'instagram-text-logo.png' ,size:'200x100'%>
          <strong> <p> Change your password </p> </strong>
          </div>
          <div>
           <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              <div class="field">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password" ,placeholder:"New password" , class:"form-control mt-3 bg-light" %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"Confirm password" , class:"form-control mt-3 bg-light" %>
              </div>

              <div class="actions">
                <%= f.submit "Change my password" ,class:"btn btn-primary form-control mt-3 " %>
              </div>
            <% end %>
            </div>
          <div class="pt-3">
                    <strong><p><%=link_to 'Back to Login', new_account_session_path, class:"text-decoration-none text-secondary" %></p></strong>

            <strong> <p><%=link_to 'Create new account', new_account_registration_path, class:"text-decoration-none text-secondary" %></p></strong>

          </div>
      </div>

      <div class="pt-2 border ">
          <strong><p><%=link_to 'Back to Login', new_account_session_path, class:"text-decoration-none text-secondary" %></p></strong>
      </div>

  </div>
</div>
