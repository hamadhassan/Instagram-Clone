        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Email", class:"form-control mt-3" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password" ,placeholder:"password" , class:"form-control mt-3"  %>
          </div>

          <div class="actions">
            <%= f.submit "Log in" ,class:"btn btn-primary form-control mt-3 "  %>
          </div>
        <% end %>

          <div class="text-center pt-3">
            <%= link_to "Forgot password?", new_password_path(resource_name) ,class:"text-decoration-none" %>
          </div>
