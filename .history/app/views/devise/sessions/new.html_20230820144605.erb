<div class="container">
  <div class="row">
    <div class="offset-2 col-4">
        <%= image_tag 'img-public-2.png'%>
    </div>
    <div class="col-6 border ">
      <div class="">
        <div class="col">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Email", class:"form-control mt-3" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password" ,placeholder:"password" , class:"form-control mt-3"  %>
            </div>

            <%# <% if devise_mapping.rememberable? %>
              <%# <div class="field"> %>
                <%# <%= f.check_box :remember_me %>
                <%# <%= f.label :remember_me %>
              <%# </div> %>
            <%# <% end %>

            <div class="actions">
              <%= f.submit "Log in" ,class:"btn btn-primary form-control mt-3 "  %>
            </div>
          <% end %>

            <div class="text-center pt-3">
              <%= link_to "Forgot password?", new_password_path(resource_name) ,class:"text-decoration-none" %>
            </div>
            
          <p>Don't have an account? <%=link_to 'Sign Up', new_account_registration_path, class:"text-decoration-none" %></p>
          <%=link_to 'Sign In', new_account_session_path, class:"btn btn-secondary" %>
        </div>
    </div>
  </div>
</div>




<%= render "devise/shared/links" %>
