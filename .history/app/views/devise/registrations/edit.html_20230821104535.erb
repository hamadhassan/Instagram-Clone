<div class="container pt-5" >
  <div class="row">
    <div class="col-xl-12  col-lg-12 col-md-6  text-left ">
      <div class="border p-5">
        <h2>Edit profile</h2>



        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group row pt-3">
            <%= f.label :username  ,class:"col-sm-2 col-form-label"%><br />
            <div class="col-sm-10">
              <%= f.text_field :username ,class:"form-control", autofocus: true%>
            </div>
          </div>

          <div class="form-group row pt-3">

            <%= f.label :first_name ,class:"col-sm-2 col-form-label"%><br />
             <div class="col-sm-10">
                <%= f.text_field :first_name ,class:"form-control"%>
            </div>
          </div>

          <div class="form-group row pt-3">
            <%= f.label :last_name ,class:"col-sm-2 col-form-label"%><br />
            <div class="col-sm-10">
                <%= f.text_field :last_name ,class:"form-control"%>
            </div>
          </div>

          <div class="form-group row pt-3">
            <%= f.label :email ,class:"col-sm-2 col-form-label"%><br />
            <div class="col-sm-10">
                <%= f.email_field :email, autocomplete: "email" ,class:"form-control"%>
            </div>
          </div>

          <div class="form-group row pt-3">
            <%= f.label :description ,class:"col-sm-2 col-form-label"%><br />
            <div class="col-sm-10">
              <%= f.text_area :description ,class:"form-control"%>
            </div>
          </div>

            <div class="form-group row pt-3">
              <%= f.label :website ,class:"col-sm-2 col-form-label"%><br />
              <div class="col-sm-10">
                <%= f.text_field :website ,class:"form-control"%>
              </div>
            </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group row pt-3">
            <%= f.label :password ,class:"col-sm-2 col-form-label" %> <br />
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control"%>
              <p>leave password field blank if you don't want to change it</p>
            </div>
          </div>

          <div class="form-group row pt-3">
            <%= f.label :password_confirmation ,class:"col-sm-2 col-form-label"%><br />
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :current_password ,class:"col-sm-2 col-form-label"%><br />
              <div class="col-sm-10">
                  <%= f.password_field :current_password, autocomplete: "current-password" ,class:"form-control"%>
                  <p>we need your current password to confirm your changes </p>
              </div>
          </div>

          <div class="form-group row pt-3">
            <%= f.label :image ,class:"col-sm-2 col-form-label"%>
              <div class="col-sm-10">
                  <%= f.file_field :image, class: "form-control" %>
              </div>
          </div>
          <div>
          <div class="row pt-3">
            <div class="offset-xl-2 col-xl-1 offset-lg-1 col-lg-2">
                <%= f.submit "Submit" ,class:"btn btn-primary form-group "%>
            </div>
            <div class="col-xl-3 col-lg-3">
                <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
            </div>
          </div>
        <% end %>

      </div>
  </div>
</div>



<h3>Cancel my account</h3>


<%= link_to "Back", :back %>
