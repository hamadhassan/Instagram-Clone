<div class="container">
  <div class="text-center">
    <h2 class="mt-3">Stories</h2>
    <%= link_to "Add a New Story", new_story_path , class:"text-decoration-none text-muted"%>
  </div>
  <div class="row">
    <div>
      <div class="d-flex flex-wrap">
        <% @stories.each do |story| %>
          <div class="col-md-4 mb-4">
            <div class="card h-80">
              <div class="h-80"> <!-- Set the height for the image (80%) -->
                <%= image_tag story.image, class:"card-img-top h-80" %> <!-- Set the image height to 100% -->
              </div>
              <div class="card-body h-20"> <!-- Set the height for the card body (20%) -->
                <h5 class="card-title"><%= story.account.username %></h5>
                <p class="card-text">
                  <%= distance_of_time_in_words(Time.now, story.expires_at) %> left
                </p>
                <%= button_to "Delete", story_path(story), method: :delete, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
