<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Add a New Story</h2>
          <%= form_with(model: @story) do |form| %>
           <div class="form-group row pt-3">
            <%= form.label :image ,class:"col-sm-2 col-form-label"%>
              <div class="col-sm-10">
                  <%= form.file_field :image,required: true, class: "form-control-file" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.submit "Create Story", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
