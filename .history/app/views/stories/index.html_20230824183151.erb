<div class="container">
  <div class="text-center">
    <h2 class="mt-3">Stories</h2>
    <%= link_to "Add a New Story", new_story_path , class:"text-decoration-none text-muted"%>
  </div>
  <div class="row">
    <div>
     <h3 class="mt-3">My Stories</h3>
      <div class="d-flex flex-wrap ">
        <% @stories.reverse.each do |story| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 d-flex flex-column">
             <div class="h-80 post-height">
                <% if story.image.attached? %>
                  <%= image_tag story.image,  class: "card-img-top h-100" %>
                <% end %>
                </div>
              <div class="card-body mt-auto">
                <h5 class="card-title"><%= story.account.username %></h5>
                <p class="card-text">
                  <%= distance_of_time_in_words(Time.now, story.expires_at) %> left
                </p>
                <%= button_to "Delete", story_path(story), method: :delete, class: "btn btn-danger"  if can_edit_profile?(story.account.id)%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
