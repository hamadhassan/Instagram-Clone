<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Add a New Story</h2>

          <%= form_with(model: @story, local: true, html: { multipart: true }) do |form| %>
            <div class="form-group">
              <%= form.label :image, class: "form-label" %>
              <%= form.file_field :image, class: "form-control-file" %>
            </div>

            <div class="form-group">
              <%= form.submit "Create Story", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
