<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= button_tag( :class => "button_green") do %>
  Submit for Approval   <i class="fa fa-heart fa-2x"> </i></i>
<% end %>


<% end %>
