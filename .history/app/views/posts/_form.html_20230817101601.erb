<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
<%= f.submit "<i class='fa fa-save'></i> Save Post".html_safe, class: "btn btn-success", type: "submit" %>

<% end %>
