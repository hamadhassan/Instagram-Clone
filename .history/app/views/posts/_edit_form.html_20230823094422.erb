<%= form_for @post, html: { method: :patch, multipart: true } do |f| %>

  <div class="form-group row pt-3">
    <%= f.label :image, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.file_field :images, multiple: true, class: "form-control-file", id: "image-upload-post" %>
    </div>
  </div>

  <div class="form-group row pt-3">
    <%= f.label :private, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.check_box :private, class: "form-check-input" %>
    </div>
  </div>

  <div class="form-group pt-3">
    <%= f.label :description, class: "col-form-label" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Write a caption" %>
  </div>

  <div class="pt-3 text-center">
    <%= f.submit "Update Post", class: "btn btn-primary" %>
  </div>
<% end %>
