<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= button_to root_path "Save Post", class: "btn btn-success" do%>
  <i class="fa fa-heart fa-2x"> </i>
  <%end%>
<% end %>
