<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= f.submit "Save Post", class: "btn btn-success" %>
<% end %>
