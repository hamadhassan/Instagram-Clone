  <div class="form-group row pt-3">
    <%= f.label :image ,class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row pt-3">
    <%= f.label :image ,class:"col-sm-2 col-form-label"%>
      <div class="col-sm-10">
          <%= f.file_field :image, class: "form-control" %>
      </div>
  </div>


