<div class="container">
   <div class="row">
      <div class="col-4">
        <%= profile_picture(@account,250)%>
      </div>
     <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <h1> <%= @account.full_name%> </h1>
          <%= link_to 'Edit Profile', edit_account_registration_path , class:"btn btn-muted btn-custom " if can_edit_profile? (@account.id)%>
        </div>
      </div>
        <div class="row profile-stats">
          <div class="col-4">
            <%= @account.posts.count%> posts
          </div>
          <div class="col-4">
           <%= @account.total_followers%> Followers
          </div>
          <div class="col-4">
           <%= @account.total_following%> Following
          </div>
          <p> <%= @account.full_name%> </p>
          <p> <%=simple_format @account.description%> </p>
          <p> <%= link_to @account.website if @account.website.present?%> </p>
        </div>
    </div>
   <div class="row profile-post">
      <% @linked_posts.each do |post|%>
        <div class="col-4">
          <div class="insta-post">
            <%= link_to image_tag(post.image), class:"img img-fluid"%>
          </div>
        </div>
      <%end%>
    </div>
</div>

